alias ls="ls -G"
alias ll="ls -lG"
alias la="ls -laG"

function nas () {
  pathlist=$(echo -E $1 \
    | tr -s '\\' '/' \
    | tr -d '\n' \
    | sed 's/^  *//g' \
    | sed 's/  *$//g' )
  remotepath="smb://$(echo $pathlist | cut -d '/' -f2-3)"
  volumepath="/Volumes/$(echo -E $pathlist | cut -d '/' -f3-)"

  if [ ! -e $volumepath ]; then
    echo -E $remotepath  | xargs -I{} -t open {}
    sleep 5
  fi
  echo -E $volumepath  | xargs -I{} -t open {}
}
